<resources>
    <!-- Base application theme. -->
    <style name="Theme.RandomUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/soft_black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
s        <item name="iconColor">@color/black</item>
        <item name="backgroundColor">@color/light_grey_two</item>
        <item name="buttonColor">@color/soft_black</item>
        <item name="textInButtonColor">@color/white</item>
        <item name="toolbarBackgroundColor">@color/white</item>
        <item name="toolbarTextColor">@color/black</item>
        <item name="counterTextColor">@color/black</item>
        <item name="blockColor">@color/white</item>
        <item name="shadowColor">@color/black</item>
        <item name="progressBarColor">@color/black</item>
        <item name="smallIconColor">@color/grey</item>
        <item name="bottomNavigationColor">@color/black</item>
        <item name="bottomNavigationItemColor">@color/soft_grey</item>
        <item name="simpleTextColor">@color/black</item>
        <item name="smallBlockColor">@color/white</item>
        <item name="starButtonColor">@color/light_grey_two</item>
        <item name="textColor">@color/soft_black</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>
</resources>