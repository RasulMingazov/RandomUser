<?xml version="1.0" encoding="utf-8"?>
<resources>
     <style name="large_block">
        <item name="android:background">?attr/blockColor</item>
        <item name="android:elevation">2dp</item>
        <item name="android:outlineSpotShadowColor">?attr/shadowColor</item>
    </style>

    <style name="clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="UserValueText">
        <item name="android:gravity">right</item>
        <item name="android:textColor">?attr/simpleTextColor</item>
        <item name="android:textSize">@dimen/user_block_values_text_size</item>
        <item name="android:textIsSelectable">true</item>
    </style>
</resources>