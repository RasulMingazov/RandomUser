<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandomUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/soft_black</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="iconColor">@color/white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="buttonColor">@color/white</item>
        <item name="textInButtonColor">@color/black</item>
        <item name="toolbarBackgroundColor">@color/grey</item>
        <item name="toolbarTextColor">@color/white</item>
        <item name="counterTextColor">@color/white</item>
        <item name="blockColor">@color/grey</item>
        <item name="shadowColor">@color/white</item>
        <item name="progressBarColor">@color/white</item>
        <item name="bottomNavigationColor">@color/white</item>
        <item name="simpleTextColor">@color/white</item>
        <item name="smallBlockColor">@color/grey_three</item>
        <item name="starButtonColor">@color/black</item>
        <item name="textColor">@color/white</item>

    </style>
</resources>