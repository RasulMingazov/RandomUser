<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/large_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/data_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/user_block_default_padding"
        android:paddingBottom="@dimen/user_block_default_padding">

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/user_block_values_margin"
            android:text="@string/country"
            android:textSize="@dimen/user_block_values_text_size" />

        <TextView
            android:id="@+id/country_value"
            style="@style/UserValueText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/user_block_values_margin"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            tools:text="CountryValue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/data_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/user_block_default_padding"
        android:paddingBottom="@dimen/user_block_default_padding">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/user_block_values_margin"
            android:text="@string/city"
            android:textSize="@dimen/user_block_values_text_size" />

        <TextView
            android:id="@+id/cityValue"
            style="@style/UserValueText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/user_block_values_margin"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            tools:text="CityValue" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/data_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/user_block_default_padding"
        android:paddingBottom="@dimen/user_block_default_padding">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/user_block_values_margin"
            android:text="@string/address"
            android:textSize="@dimen/user_block_values_text_size" />

        <TextView
            android:id="@+id/addressValue"
            style="@style/UserValueText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/user_block_values_margin"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            tools:text="AddressValue" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/data_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/user_block_default_padding"
        android:paddingBottom="@dimen/user_block_default_padding">

        <TextView
            android:id="@+id/coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/user_block_values_margin"
            android:text="@string/coordinates"
            android:textSize="@dimen/user_block_values_text_size" />

        <TextView
            android:id="@+id/coordinates_value"
            style="@style/UserValueText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/user_block_values_margin"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            tools:text="CoordinatesValue" />
    </LinearLayout>
</LinearLayout>